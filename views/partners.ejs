<%- include('partials/header') %>

<section class="page-header">
  <div class="container">
    <h1>Our <span class="text-gradient">Partners</span></h1>
    <p>Organizations and companies supporting our mission</p>
  </div>
</section>

<section class="section partners-section">
  <div class="container">
    <% if (partners && partners.length > 0) { %>
    <div class="partners-grid">
      <% partners.forEach((partner, index) => { %>
      <div class="card partner-card fade-in stagger-<%= (index % 6) + 1 %>">
        <div class="partner-logo-container">
          <% if (partner.logoUrl) { %>
            <img 
              src="<%= partner.logoUrl %>" 
              alt="<%= partner.name %>" 
              class="partner-logo"
              onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';"
            >
            <div class="partner-logo-placeholder" style="display: none;">ğŸ¤</div>
          <% } else { %>
            <div class="partner-logo-placeholder">ğŸ¤</div>
          <% } %>
        </div>
        <h3 class="partner-name"><%= partner.name %></h3>
        <p class="card-text" style="margin-top: 1rem; text-align: center;"><%= partner.description %></p>
        <% if (partner.benefits) { %>
        <p style="margin-top: 1rem; font-size: 0.85rem; color: var(--light-dim);"><strong style="color: var(--primary-light);">Benefits:</strong> <%= partner.benefits %></p>
        <% } %>
        <% if (partner.websiteUrl) { %>
        <a href="<%= partner.websiteUrl %>" target="_blank" class="btn btn-secondary" style="margin-top: 1.5rem; padding: 0.625rem 1.25rem; font-size: 0.875rem;">Visit Website</a>
        <% } %>
      </div>
      <% }); %>
    </div>
    <% } else { %>
    <div class="empty-state">
      <div class="empty-state-icon">ğŸ¤</div>
      <h3>Partners Coming Soon</h3>
      <p>We're working on exciting partnerships. Stay tuned!</p>
    </div>
    <% } %>
    
    <div style="text-align: center; margin-top: 4rem; padding: 3rem; background: var(--gradient-card); border-radius: var(--radius-xl); border: 1px solid rgba(99, 102, 241, 0.2);">
      <h3 style="margin-bottom: 1rem;">Become a Partner</h3>
      <p style="color: var(--light-muted); max-width: 500px; margin: 0 auto 1.5rem;">Interested in partnering with UIU Data Science Club? Let's create impactful opportunities together.</p>
      <a href="mailto:club@datascience.uiu.ac.bd" class="btn btn-primary">Get in Touch</a>
    </div>
  </div>
</section>

<%- include('partials/footer') %>

<%- include('partials/header') %>

<section class="page-header">
  <div class="container">
    <h1><%= partner ? 'Edit Partner' : 'Add New Partner' %></h1>
    <p>Fill in the partner details below</p>
  </div>
</section>

<section class="section">
  <div class="container">
    <div class="form-card">
      <form action="<%= action %>" method="POST" class="admin-form" enctype="multipart/form-data">
        
        <!-- Logo Upload Field -->
        <div class="form-group">
          <label for="logo">Partner Logo</label>
          <% if (partner && partner.logoUrl) { %>
            <div class="current-image">
              <img src="<%= partner.logoUrl %>" alt="Current logo" style="max-width: 200px; max-height: 100px; border-radius: var(--radius-md); margin-bottom: 1rem; box-shadow: 0 2px 8px rgba(0,0,0,0.1); object-fit: contain;">
              <p style="font-size: 0.875rem; color: var(--text-light);">Upload a new logo to replace the current one</p>
            </div>
          <% } %>
          <input 
            type="file" 
            id="logo" 
            name="logo" 
            accept="image/jpeg,image/jpg,image/png,image/webp,image/svg+xml"
            class="file-input"
          >
          <small style="color: var(--text-light); font-size: 0.875rem; margin-top: 0.25rem; display: block;">
            Accepted formats: JPG, PNG, SVG, WebP (Max 5MB) - Transparent background recommended
          </small>
        </div>

        <div class="form-group">
          <label for="name">Partner Name *</label>
          <input 
            type="text" 
            id="name" 
            name="name" 
            class="form-input"
            value="<%= partner ? partner.name : '' %>" 
            required 
            placeholder="e.g., DataCamp, Microsoft"
          >
        </div>

        <div class="form-group">
          <label for="description">Description *</label>
          <textarea 
            id="description" 
            name="description" 
            class="form-input"
            rows="4" 
            required 
            placeholder="Describe the partner organization..."
          ><%= partner ? partner.description : '' %></textarea>
        </div>

        <div class="form-group">
          <label for="benefits">Benefits *</label>
          <textarea 
            id="benefits" 
            name="benefits" 
            class="form-input"
            rows="4" 
            required 
            placeholder="List the benefits members receive from this partnership..."
          ><%= partner ? partner.benefits : '' %></textarea>
        </div>

        <div class="form-group">
          <label for="websiteUrl">Website URL</label>
          <input 
            type="url" 
            id="websiteUrl" 
            name="websiteUrl" 
            class="form-input"
            value="<%= partner ? partner.websiteUrl : '' %>" 
            placeholder="https://example.com"
          >
        </div>

        <div class="form-actions">
          <button type="submit" class="btn btn-primary">
            <%= partner ? 'Update Partner' : 'Add Partner' %>
          </button>
          <a href="/admin" class="btn btn-secondary">Cancel</a>
        </div>
      </form>
    </div>
  </div>
</section>

<style>
.form-card {
  background: var(--surface);
  border-radius: var(--radius-lg);
  padding: 2rem;
  max-width: 700px;
  margin: 0 auto;
  box-shadow: 0 2px 8px rgba(0,0,0,0.1);
}

.admin-form {
  display: flex;
  flex-direction: column;
  gap: 1.5rem;
}

.form-group {
  display: flex;
  flex-direction: column;
  gap: 0.5rem;
}

.form-group label {
  font-weight: 600;
  color: var(--text);
  font-size: 0.875rem;
}

.form-group .form-input {
  padding: 0.75rem;
  border: 1px solid rgba(92, 45, 213, 0.3);
  border-radius: var(--radius-md);
  font-size: 1rem;
  font-family: inherit;
  transition: all 0.3s ease;
}

.form-group .form-input:focus {
  outline: none;
  border-color: var(--primary);
  box-shadow: 0 0 0 3px rgba(92, 45, 213, 0.1);
}

.form-actions {
  display: flex;
  gap: 1rem;
  margin-top: 1rem;
}

.btn {
  padding: 0.75rem 2rem;
  border: none;
  border-radius: var(--radius-md);
  font-weight: 600;
  cursor: pointer;
  transition: all 0.3s ease;
  text-decoration: none;
  display: inline-block;
  text-align: center;
  font-size: 1rem;
}

.btn-primary {
  background: linear-gradient(135deg, #3b82f6 0%, #8b5cf6 100%);
  color: white;
}

.btn-primary:hover {
  transform: translateY(-2px);
  box-shadow: 0 8px 16px rgba(59, 130, 246, 0.3);
}

.btn-secondary {
  background: #6b7280;
  color: white;
}

.btn-secondary:hover {
  background: #4b5563;
}

.file-input {
  padding: 0.75rem;
  border: 2px dashed rgba(59, 130, 246, 0.3);
  border-radius: var(--radius-md);
  font-size: 1rem;
  cursor: pointer;
  transition: all 0.3s ease;
  background: rgba(59, 130, 246, 0.02);
}

.file-input:hover {
  border-color: #3b82f6;
  background: rgba(59, 130, 246, 0.05);
}

.current-image {
  margin-bottom: 0.5rem;
}

.current-image img {
  display: block;
}

@media (max-width: 768px) {
  .form-card {
    padding: 1.5rem;
  }
  
  .form-actions {
    flex-direction: column;
  }
}
</style>

<%- include('partials/footer') %>

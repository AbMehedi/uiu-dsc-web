<%- include('partials/header') %>

<section class="page-header">
  <div class="container">
    <h1><%= event ? 'Edit Event' : 'Add New Event' %></h1>
    <p>Fill in the event details below</p>
  </div>
</section>

<section class="section">
  <div class="container">
    <div class="form-card">
      <form action="<%= action %>" method="POST" class="admin-form">
        <div class="form-group">
          <label for="title">Event Title *</label>
          <input 
            type="text" 
            id="title" 
            name="title" 
            class="form-input"
            value="<%= event ? event.title : '' %>" 
            required 
            placeholder="e.g., Data Science Workshop"
          >
        </div>

        <div class="form-row">
          <div class="form-group">
            <label for="date">Date *</label>
            <input 
              type="date" 
              id="date" 
              name="date" 
              class="form-input"
              value="<%= event ? event.date : '' %>" 
              required
            >
          </div>

          <div class="form-group">
            <label for="time">Time *</label>
            <input 
              type="text" 
              id="time" 
              name="time" 
              class="form-input"
              value="<%= event ? event.time : '' %>" 
              required 
              placeholder="e.g., 3:00 PM - 5:00 PM"
            >
          </div>
        </div>

        <div class="form-row">
          <div class="form-group">
            <label for="location">Location *</label>
            <input 
              type="text" 
              id="location" 
              name="location" 
              class="form-input"
              value="<%= event ? event.location : '' %>" 
              required 
              placeholder="e.g., Room 301, UIU"
            >
          </div>

          <div class="form-group">
            <label for="seats">Available Seats *</label>
            <input 
              type="number" 
              id="seats" 
              name="seats" 
              class="form-input"
              value="<%= event ? event.seats : '' %>" 
              required 
              min="1"
            >
          </div>
        </div>

        <div class="form-group">
          <label for="description">Description *</label>
          <textarea 
            id="description" 
            name="description" 
            class="form-input"
            rows="6" 
            required 
            placeholder="Describe the event..."
          ><%= event ? event.description : '' %></textarea>
        </div>

        <div class="form-actions">
          <button type="submit" class="btn btn-primary">
            <%= event ? 'Update Event' : 'Create Event' %>
          </button>
          <a href="/admin" class="btn btn-secondary">Cancel</a>
        </div>
      </form>
    </div>
  </div>
</section>

<style>
.form-card {
  background: var(--surface);
  border-radius: var(--radius-lg);
  padding: 2rem;
  max-width: 800px;
  margin: 0 auto;
  box-shadow: 0 2px 8px rgba(0,0,0,0.1);
}

.admin-form {
  display: flex;
  flex-direction: column;
  gap: 1.5rem;
}

.form-row {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 1.5rem;
}

.form-group {
  display: flex;
  flex-direction: column;
  gap: 0.5rem;
}

.form-group label {
  font-weight: 600;
  color: var(--text);
  font-size: 0.875rem;
}

.form-group .form-input {
  padding: 0.75rem;
  border: 1px solid rgba(92, 45, 213, 0.3);
  border-radius: var(--radius-md);
  font-size: 1rem;
  font-family: inherit;
  transition: all 0.3s ease;
}

.form-group .form-input:focus {
  outline: none;
  border-color: var(--primary);
  box-shadow: 0 0 0 3px rgba(92, 45, 213, 0.1);
}

.form-actions {
  display: flex;
  gap: 1rem;
  margin-top: 1rem;
}

.btn {
  padding: 0.75rem 2rem;
  border: none;
  border-radius: var(--radius-md);
  font-weight: 600;
  cursor: pointer;
  transition: all 0.3s ease;
  text-decoration: none;
  display: inline-block;
  text-align: center;
  font-size: 1rem;
}

.btn-primary {
  background: linear-gradient(135deg, #3b82f6 0%, #8b5cf6 100%);
  color: white;
}

.btn-primary:hover {
  transform: translateY(-2px);
  box-shadow: 0 8px 16px rgba(59, 130, 246, 0.3);
}

.btn-secondary {
  background: #6b7280;
  color: white;
}

.btn-secondary:hover {
  background: #4b5563;
}

@media (max-width: 768px) {
  .form-card {
    padding: 1.5rem;
  }
  
  .form-row {
    grid-template-columns: 1fr;
  }
  
  .form-actions {
    flex-direction: column;
  }
}
</style>

<%- include('partials/footer') %>

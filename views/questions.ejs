<%- include('partials/header') %>

<section class="page-header">
  <div class="container">
    <h1>Questions <span class="text-gradient">Bank</span></h1>
    <p>Practice and prepare with our curated collection of data science questions</p>
  </div>
</section>

<section class="section questions-section">
  <div class="container">
    <% if (questions && questions.length > 0) { %>
    <div class="questions-grid">
      <% questions.forEach((question, index) => { %>
      <div class="card question-card fade-in stagger-<%= (index % 6) + 1 %>">
        <span class="question-category"><%= question.category %></span>
        <h3 class="question-title"><%= question.title %></h3>
        <p class="question-answer"><%= question.answer %></p>
        <% if (question.difficulty) { %>
        <div style="margin-top: 1rem;">
          <span style="
            display: inline-block;
            padding: 0.25rem 0.75rem;
            border-radius: var(--radius-full);
            font-size: 0.75rem;
            font-weight: 500;
            background: <%= question.difficulty === 'Easy' ? 'rgba(16, 185, 129, 0.15)' : question.difficulty === 'Medium' ? 'rgba(251, 191, 36, 0.15)' : 'rgba(239, 68, 68, 0.15)' %>;
            color: <%= question.difficulty === 'Easy' ? '#34d399' : question.difficulty === 'Medium' ? '#fbbf24' : '#f87171' %>;
          "><%= question.difficulty %></span>
        </div>
        <% } %>
      </div>
      <% }); %>
    </div>
    <% } else { %>
    <div class="empty-state">
      <div class="empty-state-icon">‚ùì</div>
      <h3>Questions Coming Soon</h3>
      <p>We're preparing a comprehensive question bank for you. Check back soon!</p>
    </div>
    <% } %>
    
    <div style="text-align: center; margin-top: 4rem; padding: 3rem; background: rgba(236, 72, 153, 0.1); border-radius: var(--radius-xl); border: 1px solid rgba(236, 72, 153, 0.2);">
      <h3 style="margin-bottom: 1rem;">Have a Question to Contribute?</h3>
      <p style="color: var(--light-muted); max-width: 500px; margin: 0 auto 1.5rem;">Help grow our question bank by submitting interesting data science questions and their solutions.</p>
      <a href="mailto:club@datascience.uiu.ac.bd" class="btn btn-primary">Submit a Question</a>
    </div>
  </div>
</section>

<%- include('partials/footer') %>

<%- include('partials/header') %>

<section class="page-header">
  <div class="container">
    <h1>Questions <span class="text-gradient">Bank</span></h1>
    <p>Access organized question resources for your exams</p>
  </div>
</section>

<section class="section questions-section">
  <div class="container">
    <% if (questions && questions.length > 0) { %>
    <!-- Departmental Questions -->
    <% const departmental = questions.filter(q => q.category === 'Departmental'); %>
    <% if (departmental.length > 0) { %>
    <div class="questions-category">
      <h2 class="questions-category-title">ğŸ“š Departmental Questions</h2>
      <div class="questions-list">
        <% departmental.forEach((question) => { %>
        <div class="question-item">
          <div class="question-item-main">
            <h3 class="question-item-title"><%= question.title %></h3>
            <p class="question-item-meta"><%= question.subcategory %></p>
          </div>
          <a href="<%= question.link %>" target="_blank" rel="noopener" class="btn btn-primary btn-small">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"></path><polyline points="15 3 21 3 21 9"></polyline><line x1="10" y1="14" x2="21" y2="3"></line></svg>
            Open
          </a>
        </div>
        <% }); %>
      </div>
    </div>
    <% } %>

    <!-- Non-Departmental Questions -->
    <% const nonDepartmental = questions.filter(q => q.category !== 'Departmental'); %>
    <% if (nonDepartmental.length > 0) { %>
    <div class="questions-category">
      <h2 class="questions-category-title">ğŸ“ Non-Departmental Questions</h2>
      <div class="questions-list">
        <% nonDepartmental.forEach((question) => { %>
        <div class="question-item">
          <div class="question-item-main">
            <h3 class="question-item-title"><%= question.title %></h3>
            <p class="question-item-meta"><%= question.subcategory %></p>
          </div>
          <a href="<%= question.link %>" target="_blank" rel="noopener" class="btn btn-primary btn-small">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"></path><polyline points="15 3 21 3 21 9"></polyline><line x1="10" y1="14" x2="21" y2="3"></line></svg>
            Open
          </a>
        </div>
        <% }); %>
      </div>
    </div>
    <% } %>
    <% } else { %>
    <div class="empty-state">
      <div class="empty-state-icon">â“</div>
      <h3>Questions Coming Soon</h3>
      <p>We're preparing a comprehensive question bank for you. Check back soon!</p>
    </div>
    <% } %>
    
    <div class="questions-contribute">
      <h3>Have questions to contribute?</h3>
      <p>Help grow our question bank by submitting resources.</p>
      <a href="mailto:club@datascience.uiu.ac.bd" class="btn btn-primary">Submit a Question</a>
    </div>
  </div>
</section>

<%- include('partials/footer') %>

<%- include('partials/header') %>

<section class="page-header">
  <div class="container">
    <h1><%= question ? 'Edit Question' : 'Add New Question' %></h1>
    <p>Fill in the question resource details below</p>
  </div>
</section>

<section class="section">
  <div class="container">
    <div class="form-card">
      <form action="<%= action %>" method="POST" class="admin-form">
        <div class="form-group">
          <label for="category">Category *</label>
          <select id="category" name="category" class="form-input" required>
            <option value="">Select Category</option>
            <option value="Departmental" <%= question && question.category === 'Departmental' ? 'selected' : '' %>>Departmental</option>
            <option value="Non-Departmental" <%= question && question.category === 'Non-Departmental' ? 'selected' : '' %>>Non-Departmental</option>
          </select>
        </div>

        <div class="form-group">
          <label for="subcategory">Subcategory/Department *</label>
          <input 
            type="text" 
            id="subcategory" 
            name="subcategory" 
            class="form-input"
            value="<%= question ? question.subcategory : '' %>" 
            required 
            placeholder="e.g., CSE, EEE, BBA, General"
          >
        </div>

        <div class="form-group">
          <label for="title">Question Title *</label>
          <input 
            type="text" 
            id="title" 
            name="title" 
            class="form-input"
            value="<%= question ? question.title : '' %>" 
            required 
            placeholder="e.g., Data Structures Mid-2023, Database Final-2024"
          >
        </div>

        <div class="form-group">
          <label for="link">Resource Link *</label>
          <input 
            type="url" 
            id="link" 
            name="link" 
            class="form-input"
            value="<%= question ? question.link : '' %>" 
            required 
            placeholder="https://drive.google.com/..."
          >
          <small style="color: var(--text-muted); font-size: 0.8rem;">
            Provide a Google Drive, Dropbox, or other accessible link to the question paper
          </small>
        </div>

        <div class="form-actions">
          <button type="submit" class="btn btn-primary">
            <%= question ? 'Update Question' : 'Add Question' %>
          </button>
          <a href="/admin" class="btn btn-secondary">Cancel</a>
        </div>
      </form>
    </div>
  </div>
</section>

<style>
.form-card {
  background: var(--surface);
  border-radius: var(--radius-lg);
  padding: 2rem;
  max-width: 600px;
  margin: 0 auto;
  box-shadow: 0 2px 8px rgba(0,0,0,0.1);
}

.admin-form {
  display: flex;
  flex-direction: column;
  gap: 1.5rem;
}

.form-group {
  display: flex;
  flex-direction: column;
  gap: 0.5rem;
}

.form-group label {
  font-weight: 600;
  color: var(--text);
  font-size: 0.875rem;
}

.form-group .form-input {
  padding: 0.75rem;
  border: 1px solid rgba(92, 45, 213, 0.3);
  border-radius: var(--radius-md);
  font-size: 1rem;
  font-family: inherit;
  transition: all 0.3s ease;
}

.form-group .form-input:focus {
  outline: none;
  border-color: var(--primary);
  box-shadow: 0 0 0 3px rgba(92, 45, 213, 0.1);
}

.form-actions {
  display: flex;
  gap: 1rem;
  margin-top: 1rem;
}

.btn {
  padding: 0.75rem 2rem;
  border: none;
  border-radius: var(--radius-md);
  font-weight: 600;
  cursor: pointer;
  transition: all 0.3s ease;
  text-decoration: none;
  display: inline-block;
  text-align: center;
  font-size: 1rem;
}

.btn-primary {
  background: linear-gradient(135deg, #3b82f6 0%, #8b5cf6 100%);
  color: white;
}

.btn-primary:hover {
  transform: translateY(-2px);
  box-shadow: 0 8px 16px rgba(59, 130, 246, 0.3);
}

.btn-secondary {
  background: #6b7280;
  color: white;
}

.btn-secondary:hover {
  background: #4b5563;
}

@media (max-width: 768px) {
  .form-card {
    padding: 1.5rem;
  }
  
  .form-actions {
    flex-direction: column;
  }
}
</style>

<%- include('partials/footer') %>

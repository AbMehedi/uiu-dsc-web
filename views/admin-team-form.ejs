<%- include('partials/header') %>

<section class="page-header">
  <div class="container">
    <h1><%= member ? 'Edit Team Member' : 'Add Team Member' %></h1>
    <p>Fill in the team member details below</p>
  </div>
</section>

<section class="section">
  <div class="container">
    <div class="form-card">
      <form action="<%= action %>" method="POST" class="admin-form" enctype="multipart/form-data">
        
        <!-- Photo Upload Field -->
        <div class="form-group">
          <label for="image">Member Photo</label>
          <% if (member && member.imageUrl) { %>
            <div class="current-image">
              <img src="<%= member.imageUrl %>" alt="Current photo" style="max-width: 150px; max-height: 150px; border-radius: 50%; margin-bottom: 1rem; box-shadow: 0 2px 8px rgba(0,0,0,0.1); object-fit: cover;">
              <p style="font-size: 0.875rem; color: var(--text-light);">Upload a new photo to replace the current one</p>
            </div>
          <% } %>
          <input 
            type="file" 
            id="image" 
            name="image" 
            accept="image/jpeg,image/jpg,image/png,image/webp"
            class="file-input"
          >
          <small style="color: var(--text-light); font-size: 0.875rem; margin-top: 0.25rem; display: block;">
            Accepted formats: JPG, PNG, WebP (Max 5MB) - Square images work best
          </small>
        </div>

        <div class="form-group">
          <label for="name">Full Name *</label>
          <input 
            type="text" 
            id="name" 
            name="name" 
            class="form-input"
            value="<%= member ? member.name : '' %>" 
            required 
            placeholder="e.g., John Doe"
          >
        </div>

        <div class="form-group">
          <label for="role">Role/Position *</label>
          <input 
            type="text" 
            id="role" 
            name="role" 
            class="form-input"
            value="<%= member ? member.role : '' %>" 
            required 
            placeholder="e.g., President, Vice President"
          >
        </div>

        <div class="form-group">
          <label for="category">Category *</label>
          <select id="category" name="category" class="form-input" required>
            <option value="">Select Category</option>
            <option value="Advisor" <%= member && member.category === 'Advisor' ? 'selected' : '' %>>Advisor</option>
            <option value="Executive Committee" <%= member && member.category === 'Executive Committee' ? 'selected' : '' %>>Executive Committee</option>
            <option value="Coordinators" <%= member && member.category === 'Coordinators' ? 'selected' : '' %>>Coordinators</option>
            <option value="Technical Team" <%= member && member.category === 'Technical Team' ? 'selected' : '' %>>Technical Team</option>
            <option value="Content Team" <%= member && member.category === 'Content Team' ? 'selected' : '' %>>Content Team</option>
            <option value="Operations Team" <%= member && member.category === 'Operations Team' ? 'selected' : '' %>>Operations Team</option>
          </select>
        </div>

        <div class="form-group">
          <label for="email">Email *</label>
          <input 
            type="email" 
            id="email" 
            name="email" 
            class="form-input"
            value="<%= member ? member.email : '' %>" 
            required 
            placeholder="e.g., john@uiu.ac.bd"
          >
        </div>

        <div class="form-actions">
          <button type="submit" class="btn btn-primary">
            <%= member ? 'Update Member' : 'Add Member' %>
          </button>
          <a href="/admin" class="btn btn-secondary">Cancel</a>
        </div>
      </form>
    </div>
  </div>
</section>

<style>
.form-card {
  background: var(--surface);
  border-radius: var(--radius-lg);
  padding: 2rem;
  max-width: 600px;
  margin: 0 auto;
  box-shadow: 0 2px 8px rgba(0,0,0,0.1);
}

.admin-form {
  display: flex;
  flex-direction: column;
  gap: 1.5rem;
}

.form-group {
  display: flex;
  flex-direction: column;
  gap: 0.5rem;
}

.form-group label {
  font-weight: 600;
  color: var(--text);
  font-size: 0.875rem;
}

.form-group .form-input {
  padding: 0.75rem;
  border: 1px solid rgba(92, 45, 213, 0.3);
  border-radius: var(--radius-md);
  font-size: 1rem;
  font-family: inherit;
  transition: all 0.3s ease;
}

.form-group .form-input:focus {
  outline: none;
  border-color: var(--primary);
  box-shadow: 0 0 0 3px rgba(92, 45, 213, 0.1);
}

.form-actions {
  display: flex;
  gap: 1rem;
  margin-top: 1rem;
}

.btn {
  padding: 0.75rem 2rem;
  border: none;
  border-radius: var(--radius-md);
  font-weight: 600;
  cursor: pointer;
  transition: all 0.3s ease;
  text-decoration: none;
  display: inline-block;
  text-align: center;
  font-size: 1rem;
}

.btn-primary {
  background: linear-gradient(135deg, #3b82f6 0%, #8b5cf6 100%);
  color: white;
}

.btn-primary:hover {
  transform: translateY(-2px);
  box-shadow: 0 8px 16px rgba(59, 130, 246, 0.3);
}

.btn-secondary {
  background: #6b7280;
  color: white;
}

.btn-secondary:hover {
  background: #4b5563;
}

.file-input {
  padding: 0.75rem;
  border: 2px dashed rgba(59, 130, 246, 0.3);
  border-radius: var(--radius-md);
  font-size: 1rem;
  cursor: pointer;
  transition: all 0.3s ease;
  background: rgba(59, 130, 246, 0.02);
}

.file-input:hover {
  border-color: #3b82f6;
  background: rgba(59, 130, 246, 0.05);
}

.current-image {
  margin-bottom: 0.5rem;
}

.current-image img {
  display: block;
}

@media (max-width: 768px) {
  .form-card {
    padding: 1.5rem;
  }
  
  .form-actions {
    flex-direction: column;
  }
}
</style>

<%- include('partials/footer') %>

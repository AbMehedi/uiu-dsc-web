<%- include('partials/header') %>

<section class="page-header">
  <div class="container">
    <h1 class="gradient-text">Meet Our Team</h1>
    <p>The passionate individuals driving innovation at UIU Data Science Club</p>
  </div>
</section>

<section class="section team-section">
  <div class="container">
    <% 
    const categories = ['Advisor', 'Executive Committee', 'Coordinators', 'Technical Team', 'Content Team', 'Operations Team'];
    categories.forEach(category => { 
      const members = team.filter(m => m.category === category);
      if (members.length > 0) {
    %>
      <div class="team-category">
        <h2 class="category-title"><%= category %></h2>
        <div class="team-grid">
          <% members.forEach(member => { %>
            <div class="team-card fade-in">
              <div class="team-card-image">
                <% 
                  const initials = member.name.split(' ').map(n => n[0]).join('').substring(0, 2).toUpperCase();
                %>
                <% if (member.imageUrl) { %>
                  <img 
                    src="<%= member.imageUrl %>" 
                    alt="<%= member.name %>"
                    onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';"
                  >
                  <div class="avatar-placeholder" style="display: none;">
                    <%= initials %>
                  </div>
                <% } else { %>
                  <div class="avatar-placeholder">
                    <%= initials %>
                  </div>
                <% } %>
              </div>
              <div class="team-card-content">
                <h3 class="team-card-name"><%= member.name %></h3>
                <p class="team-card-role"><%= member.role %></p>
                <a href="mailto:<%= member.email %>" class="team-card-email">
                  <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path>
                    <polyline points="22,6 12,13 2,6"></polyline>
                  </svg>
                  Contact
                </a>
              </div>
            </div>
          <% }); %>
        </div>
      </div>
    <% 
      }
    }); 
    %>
    
    <% if (team.length === 0) { %>
      <div class="empty-state">
        <svg xmlns="http://www.w3.org/2000/svg" width="64" height="64" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
          <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
          <circle cx="9" cy="7" r="4"></circle>
          <path d="M23 21v-2a4 4 0 0 0-3-3.87"></path>
          <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
        </svg>
        <h3>No Team Members Yet</h3>
        <p>Team member profiles will appear here once added.</p>
      </div>
    <% } %>
  </div>
</section>

<style>
/* Team Section Styles */
.team-section {
  padding: 4rem 0;
}

.team-category {
  margin-bottom: 4rem;
}

.category-title {
  font-size: 1.75rem;
  font-weight: 700;
  color: var(--text);
  margin-bottom: 2rem;
  padding-bottom: 0.75rem;
  border-bottom: 3px solid;
  border-image: linear-gradient(90deg, #3b82f6, #8b5cf6) 1;
  display: inline-block;
}

/* Responsive Grid - Better space utilization */
.team-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
  gap: 2rem;
  margin-top: 2rem;
}

/* Compact Team Card */
.team-card {
  background: var(--surface);
  border-radius: var(--radius-lg);
  overflow: hidden;
  transition: all 0.3s ease;
  border: 1px solid rgba(59, 130, 246, 0.1);
  display: flex;
  flex-direction: column;
  height: 100%;
}

.team-card:hover {
  transform: translateY(-8px);
  box-shadow: 0 12px 24px rgba(59, 130, 246, 0.2);
  border-color: rgba(59, 130, 246, 0.3);
}

/* Compact Image Container */
.team-card-image {
  width: 100%;
  height: 200px;
  overflow: hidden;
  position: relative;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.team-card-image img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: transform 0.3s ease;
}

.team-card:hover .team-card-image img {
  transform: scale(1.1);
}

/* Avatar Placeholder with Initials */
.avatar-placeholder {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 3rem;
  font-weight: 700;
  color: white;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.2);
}

/* Content Area - More compact */
.team-card-content {
  padding: 1.5rem;
  display: flex;
  flex-direction: column;
  gap: 0.5rem;
  flex-grow: 1;
}

.team-card-name {
  font-size: 1.125rem;
  font-weight: 700;
  color: var(--text);
  margin: 0;
  line-height: 1.3;
}

.team-card-role {
  font-size: 0.875rem;
  color: var(--text-light);
  margin: 0;
  font-weight: 500;
}

.team-card-email {
  display: inline-flex;
  align-items: center;
  gap: 0.5rem;
  color: #3b82f6;
  text-decoration: none;
  font-size: 0.875rem;
  font-weight: 500;
  margin-top: auto;
  padding-top: 0.75rem;
  border-top: 1px solid rgba(59, 130, 246, 0.1);
  transition: all 0.3s ease;
}

.team-card-email:hover {
  color: #2563eb;
  gap: 0.75rem;
}

.team-card-email svg {
  flex-shrink: 0;
}

/* Empty State */
.empty-state {
  text-align: center;
  padding: 4rem 2rem;
  color: var(--text-light);
}

.empty-state svg {
  opacity: 0.3;
  margin-bottom: 1rem;
}

.empty-state h3 {
  color: var(--text);
  margin-bottom: 0.5rem;
}

/* Responsive Design */
@media (max-width: 1200px) {
  .team-grid {
    grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
    gap: 1.5rem;
  }
}

@media (max-width: 768px) {
  .team-grid {
    grid-template-columns: repeat(auto-fill, minmax(220px, 1fr));
    gap: 1.25rem;
  }
  
  .team-card-image {
    height: 180px;
  }
  
  .team-card-content {
    padding: 1.25rem;
  }
  
  .category-title {
    font-size: 1.5rem;
  }
}

@media (max-width: 480px) {
  .team-grid {
    grid-template-columns: 1fr;
    gap: 1.5rem;
  }
  
  .team-card-image {
    height: 250px;
  }
}

/* Animation */
@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.fade-in {
  animation: fadeIn 0.6s ease-out forwards;
}
</style>

<%- include('partials/footer') %>

<%- include('partials/header') %>

<section class="section">
  <div class="container">
    <h2 class="section-title">Meet Our Team</h2>
    <p class="section-subtitle">Dedicated individuals working to make UIU DSC a great community</p>

    <% 
    const categoryOrder = ['Advisor', 'Executive Committee', 'Coordinators', 'Members'];
    const orderedCategories = categoryOrder.filter(cat => groupedTeam[cat]);
    const otherCategories = Object.keys(groupedTeam).filter(cat => !categoryOrder.includes(cat));
    const allCategories = [...orderedCategories, ...otherCategories];
    %>

    <% allCategories.forEach(category => { %>
      <div class="team-category">
        <h3 class="team-category-title"><%= category %></h3>
        <div class="team-grid">
          <% groupedTeam[category].forEach(member => { %>
            <div class="team-member">
              <div class="team-avatar">
                <%= member.name.charAt(0).toUpperCase() %>
              </div>
              <h4 class="team-name"><%= member.name %></h4>
              <p class="team-role"><%= member.role %></p>
              <% if (member.email) { %>
                <a href="mailto:<%= member.email %>" class="team-email"><%= member.email %></a>
              <% } %>
            </div>
          <% }); %>
        </div>
      </div>
    <% }); %>
  </div>
</section>

<section class="section" style="background: var(--bg-white);">
  <div class="container">
    <div class="partnership-card" style="text-align: center;">
      <h2>Want to Join Our Team?</h2>
      <p>We're always looking for passionate individuals to help us grow the data science community at UIU.</p>
      <a href="/join" class="btn btn-secondary" style="font-size: 1.125rem; padding: 1rem 2rem;">Apply Now</a>
    </div>
  </div>
</section>

<%- include('partials/footer') %>

<!-- Featured Partner -->
<% if (partners && partners.length > 0) { %>
<section class="section" style="background: var(--dark-lighter);">
  <div class="container">
    <div class="section-header">
      <span class="section-badge">Featured Partner</span>
      <h2>Industry <span class="text-gradient">Collaboration</span></h2>
    </div>
    
    <% partners.slice(0, 1).forEach(partner => { %>
    <div class="card" style="max-width: 800px; margin: 0 auto;">
      <div class="card-content" style="padding: 3rem; text-align: center;">
        <div style="display: inline-block; padding: 0.5rem 1rem; background: rgba(16, 185, 129, 0.15); border-radius: var(--radius-full); font-size: 0.85rem; font-weight: 500; color: #34d399; margin-bottom: 1.5rem;">Official Partnership ‚Ä¢ Just Announced</div>
        <h3 style="font-size: 1.75rem; margin-bottom: 1rem;"><%= partner.name %></h3>
        <p class="card-text" style="max-width: 600px; margin: 0 auto 1.5rem;"><%= partner.description %></p>
        <p style="color: var(--light-muted); margin-bottom: 1.5rem;"><strong style="color: var(--light);">Exclusive Benefits:</strong> <%= partner.benefits %></p>
        <a href="/partners" class="btn btn-primary">Learn More</a>
      </div>
    </div>
    <% }); %>
  </div>
</section>
<% } %>

<!-- Upcoming Events Section -->
<section class="section events-section">
  <div class="container">
    <div class="section-header">
      <span class="section-badge">What's Next</span>
      <h2>Upcoming <span class="text-gradient">Events</span></h2>
      <p>Join us for our exciting events and activities throughout the semester</p>
    </div>
    
    <% if (upcomingEvents && upcomingEvents.length > 0) { %>
    <div class="events-grid">
      <% upcomingEvents.slice(0, 3).forEach((event, index) => { %>
      <div class="card event-card fade-in stagger-<%= index + 1 %>">
        <span class="event-status upcoming">Upcoming</span>
        <div style="background: var(--gradient-primary); height: 160px; display: flex; align-items: center; justify-content: center;">
          <svg xmlns="http://www.w3.org/2000/svg" width="64" height="64" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1" stroke-linecap="round" stroke-linejoin="round" style="opacity: 0.5;"><rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect><line x1="16" y1="2" x2="16" y2="6"></line><line x1="8" y1="2" x2="8" y2="6"></line><line x1="3" y1="10" x2="21" y2="10"></line></svg>
        </div>
        <div class="card-content">
          <div class="event-date">
            <span class="event-date-day"><%= new Date(event.date).getDate() %></span>
            <span class="event-date-month"><%= new Date(event.date).toLocaleString('en-US', { month: 'short' }) %></span>
          </div>
          <h3 class="card-title"><%= event.title %></h3>
          <p class="card-text"><%= event.description.substring(0, 100) %>...</p>
          <div class="card-meta">
            <span>üïí <%= event.time %></span>
            <span>üìç <%= event.location %></span>
          </div>
        </div>
      </div>
      <% }); %>
    </div>
    
    <div style="text-align: center; margin-top: 3rem;">
      <a href="/events" class="btn btn-secondary">View All Events</a>
    </div>
    <% } else { %>
    <div class="empty-state">
      <div class="empty-state-icon">üìÖ</div>
      <h3>No Upcoming Events</h3>
      <p>We're currently planning our next batch of exciting events. Check back soon or follow us on social media!</p>
      <div style="margin-top: 2rem; display: flex; gap: 1rem; justify-content: center; flex-wrap: wrap;">
        <a href="/events" class="btn btn-secondary">View Past Events</a>
        <a href="https://www.facebook.com/profile.php?id=61573382191627" target="_blank" class="btn btn-primary">Follow Updates</a>
      </div>
    </div>
    <% } %>
  </div>
</section>

